<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Dashboard</h1>
            <a href="/add" class="btn btn-primary">Add Movie</a>
        </div>

        <div class="row">
            <% movies.forEach((movie) => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/<%= movie.image %>" class="card-img-top" alt="<%= movie.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.name %></h5>
                            <p class="card-text"><strong>Price:</strong> â‚¹<%= movie.price %></p>
                            <p class="card-text"><strong>Seats:</strong> <%= movie.seats %></p>
                            <p class="card-text"><strong>Description:</strong> <%= movie.description %></p>
                            <div class="d-flex">
                                <a href="/edit?editId=<%= movie._id %>" class="btn btn-primary me-2">Edit</a>
                                <a href="/delete?deleteId=<%= movie._id %>" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>

</html>
